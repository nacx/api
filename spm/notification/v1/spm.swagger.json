    "tetrate.api.tcc.spm.notification.v1.Notification": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uint64",
          "description": "Notification id. auto generated."
        },
        "name": {
          "type": "string",
          "description": "Notification name. auto generated. Name will be set to tenants/tetrate/notifications/id."
